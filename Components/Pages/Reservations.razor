	<h3>Name</h3>
	<input placeholder="Name"/>
	<h3>Citizenship</h3>
	<input placeholder="Citizenship"/>
	<h3>Status</h3>
	<input placeholder="Status"/>
</div>

<div class="d-flex justify-content-center">
